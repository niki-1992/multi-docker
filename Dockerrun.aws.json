 {
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "nikash19/multi-client:latest",
      "hostname": "client",
      "essential": false,
      "memory": 128
    }, 
    {
      "name": "server",
      "image": "nikash19/multi-server:latest",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "nikash19/multi-worker:latest",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "nikash19/multi-nginx:latest",
      "hostname":"nginx",
      "essential": true,
      "memory": 128,
      "portMappings" : [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [ "client", "server" ]
    }
  ]
}